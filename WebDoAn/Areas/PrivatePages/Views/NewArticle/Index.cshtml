@model WebDoAn.Models.BaiViet
@{
    ViewBag.Title = "Index";
}
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-8">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Thông tin chung</h3>

                </div>
                @using (Html.BeginForm("NewArticle", "Index", FormMethod.Post))


                {@Html.AntiForgeryToken()
                <form role="form">
                    <div class="box-body">
                        <div class="form-group">
                            @Html.Label(" Tin bài viết")

                            <input type="email" class="form-control" placeholder="Tối đa 37 kí tự">
                        </div>
                        <div class="form-group">
                            @Html.Label(" Nội dung tóm tắt")
                            <textarea rows="5" class="form-control" placeholder=" Nội dung không quá 5 dòng"> </textarea>
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox"> Kiểm duyệt
                            </label>
                        </div>

                    </div>
                </form>

            }

            </div>
            <!-- /.box -->
        </div>
        <!-- right column -->
        <div class="col-md-3">
            <div class="box box-warning">
                <div class="box-header with-border">
                    <h3 class="box-title">Hình đại diện</h3>
                    <div class="form-group">
                        <img src="~/Images/images.jpeg" />
                        @Html.Label("File input")

                        <div>
                            <input type="search" class="form-control" placeholder="">

                        </div>


                    </div>
                </div>
            </div>

        </div>
        <div class="col-md-12">

            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">
                        Nội dung bài viết

                    </h3>
                    <!-- tools box -->
                    <div class="pull-right box-tools">
                        <button type="button" class="btn btn-default btn-sm" data-widget="collapse" data-toggle="tooltip"
                                title="Collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-default btn-sm" data-widget="remove" data-toggle="tooltip"
                                title="Remove">
                            <i class="fa fa-times"></i>
                        </button>
                    </div>
                    <!-- /. tools -->
                </div>
                <!-- /.box-header -->
                <div class="box-body pad">
                    <form>
                        <textarea class="textarea" placeholder="Place some text here"
                                  style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"></textarea>
                    </form>
                </div>
            </div>
        </div>
        <!-- /.col-->

    </div>
    <div class="box-footer">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</section>